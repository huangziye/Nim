<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText android:id="@+id/et_account" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_margin="20dp" android:hint="请输入账号"/>
    <EditText android:id="@+id/et_password" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_margin="20dp" android:hint="请输入密码" android:inputType="textPassword"/>
    <Button android:id="@+id/btn_login" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="登录"
            android:layout_margin="20dp"/>
</LinearLayout>